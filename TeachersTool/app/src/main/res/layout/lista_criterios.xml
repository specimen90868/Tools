<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/IdcCriterio"
        android:id="@+id/IdcCriterio"
        android:visibility="invisible"
        android:textSize="@dimen/subtitlecatalogos"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="F"
        android:background="@drawable/shape_inicial"
        android:textColor="@color/colorTextShape"
        android:textSize="@dimen/inicialcatalogos"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/cCrInicial"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="@string/cCriNombre"
        android:id="@+id/cCriNombre"
        android:textSize="@dimen/titlecatalogos"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
